<h1>Create a menuitem for<h2>

<p>Current restaurant: <%= @restaurant.name %></p>


<%= form_for [@restaurant, @menu_item]  do |f| %>
<div>
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div>
  <%= f.label :price %>
  <%= f.number_field :price,:step => 'any' %>
</div>
<div>
  <%= f.label :description %>
  <%= f.text_field :description %>
</div>
<div>
  <%= f.label :category %>
  <%= f.text_field :category %>
</div>
<%= f.submit %>
<% end %>
