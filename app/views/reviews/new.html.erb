<h1>Create a review<h2>


<p>Current restaurant: <%= @restaurant.name %></p>


<%= form_for [@restaurant, @review]  do |f| %>
<div>
  <%= f.label :review %>
  <%= f.text_field :review %>
</div>
<div>
  <%= f.label :rating %>
  <%= f.number_field :review, :step => 'any' %>
</div>
<div>
  <%= f.label :totalbill %>
  <%= f.number_field :totalbill %>
</div>
<%= f.submit %>
<% end %>
