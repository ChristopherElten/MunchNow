<div class="container">
	<div>
		<%= form_tag find_user_that_review_x_restaurant_admin_index_path, :method => 'get' do %>

	  	<h2>Find a user that ate at restaurant 'x'</h2>

		  <div>
		  <%= select_tag("name", options_from_collection_for_select(Restaurant.all, :id, :name)) %>
		  <%= submit_tag "Find", class: 'btn btn-success' %>
			</div>

		<% end %>
	</div>
	<div>
		<p><%= @user.count.count %> reviewers ate at <%= @restaurant %></p>
		<% @user.each do |x| %>
			<p><strong>Email:</strong>
			<%= link_to x.email, user_path((User.select('id').where('email= ?', x.email ).first.id)) %></p>
		<% end %>
	</div>
</div>





