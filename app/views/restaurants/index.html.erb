<div class="container-fluid">
  <div class="row">
    <div class="col-xs-2"> 
        <!-- Query -->
        <div>
          <%= render 'query' %>
        </div>
    </div>
    <div class="col-xs-8">

      <h1>Listing restaurants</h1>

          <% @restaurants.each do |restaurant| %>
            <div id="rest-view-test">
              <h3><%= restaurant.name %></h3>
              <h3><%= restaurant.pricerange %></h3>
              <h3><%= restaurant.description %></h3>
              <h3><%= restaurant.type %></h3>
              <%= link_to 'Show', restaurant_path(restaurant)%>
              <%= link_to 'Edit', restaurant_path(restaurant)%>
            </div>
          <% end %>
    </div>
  </div> 
</div>

